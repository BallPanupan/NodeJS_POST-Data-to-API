          <p>Update Page</p>
            <center>
                <a class="btn btn-outline-primary" href="/insert">insert</a>
                <a class="btn btn-outline-primary" href="/Views">Views</a>
                <p></p>
            <center>

            <form method="post" action="/update">
              <p><input type="text" class="form-control" name="fname" value="<%=data[0].fname%>"></p>
